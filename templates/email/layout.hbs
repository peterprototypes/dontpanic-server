<!doctype html>
<html lang="en">

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">

    {{#if title}}
        <title>{{title}}</title>
    {{else}}
        <title>Don't Panic.rs transactional email</title>
    {{/if}}


    {{> email/style }}
</head>

<body>
    <table role="presentation" border="0" cellpadding="0" cellspacing="0" class="body">
        <tr>
            <td>&nbsp;</td>
            <td class="container">
                <div class="content">
                    <!-- START CENTERED WHITE CONTAINER -->
                    {{> content}}

                    <!-- START FOOTER -->
                    <div class="footer">
                        <table role="presentation" border="0" cellpadding="0" cellspacing="0">
                            <tr>
                                <td class="content-block">
                                    This notification has been sent to the email address associated with your
                                    Don't Panic account.
                                </td>
                            </tr>
                            <tr>
                                <td>&nbsp;</td>
                            </tr>
                            <tr>
                                <td class="content-block">
                                    This email message was auto-generated. Please do not respond. If you need additional
                                    help, please visit
                                    <a href="https://dontpanic.rs/contact">https://dontpanic.rs/contact</a>.
                                </td>
                            </tr>
                            <tr>
                                <td>&nbsp;</td>
                            </tr>
                            <tr>
                                <td class="content-block powered-by">
                                    Copyright Â© 2024 Don't Panic. All rights reserved.
                                </td>
                            </tr>
                        </table>
                    </div>
                    <!-- END FOOTER -->

                    <!-- END CENTERED WHITE CONTAINER -->
                </div>
            </td>
            <td>&nbsp;</td>
        </tr>
    </table>
</body>

</html>